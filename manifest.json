{
  "manifest_version": 3,
  "name": "Slug Generator",
  "description": "Generate clean URL slugs instantly and copy them to your clipboard.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Slug Generator"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
